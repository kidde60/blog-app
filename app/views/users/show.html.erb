<div class="user-page">
  <%= render "shared/details", user: @user %>
    <div class="user-bio">
     <strong class="bio">Bio: </strong> <br>
     <p><%= @user.bio %></p>
    </div>
    <div class="user-posts">
    <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(user_id:@user.id, id: post.id) do%>
      <%= render "shared/posts_details", post: post %>
        <%end%>
    <%end%>
    </div>
  <% if @current_user %>
    <a href="/users/<%= @user.id %>/posts/new">
<button class="allposts-btn">
        Create new post
</button></a>
<% end %>
    <button><%= link_to 'See all posts', user_posts_path(@user)%></button>
</div>